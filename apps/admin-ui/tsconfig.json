{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      // old version
      "app/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@component/*": ["./src/component/*"],
      "@common/*": ["./src/common/*"],
      "@styles/*": ["./src/styles/*"],
      "@modules/*": ["./src/modules/*"],
      "@context/*": ["./src/context/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "src",
    "types/**/*.d.ts",
    "i18next.d.ts",
    "middleware.ts",
    ".eslintrc.cjs",
    "stylelint.config.js",
    "next-i18next.config.js",
    "jest.config.mjs",
    "__mocks__",
    "next.config.mjs",
    "next-env.d.ts"
  ]
}
